{
  "plugins": ["@theforeman/foreman", "spellcheck", "translation"],
  "extends": [
    "plugin:@theforeman/foreman/core",
    "plugin:@theforeman/foreman/plugins"
  ],
  "rules": {
    "translation/no-strings-without-translations": "warn",
    "spellcheck/spell-checker": [
      "error",
      {
        "identifiers": false,
        "ignoreRequire": true,
        "skipWords": [
          "ansible",
          "camelcase",
          "checkbox",
          "csrf",
          "dropdown",
          "donut",
          "hostnames",
          "href",
          "ips",
          "ipv4",
          "jed",
          "katello",
          "knowledgebase",
          "noopener",
          "noreferrer",
          "nowrap",
          "pid",
          "redhat",
          "remediate",
          "remediations",
          "repo",
          "theforeman",
          "tooltip",
          "unmount",
          "redux",
          "dropdown"
        ],
        "minLength": 3
      }
    ]
  }
}
